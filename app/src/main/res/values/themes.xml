<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Chaos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.Chaos" parent="Base.Theme.Chaos">
        <item name="colorPrimary">@color/primaryDark</item>
    </style>

    <!-- Define a full-screen bottom sheet style -->
    <style name="FullHeightBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullHeightBottomSheet</item>
    </style>

    <!-- Customize bottom sheet behavior to make it full height -->
    <style name="FullHeightBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorAccent</item>
    </style>

</resources>